<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttendEase.NoActionBar">
        <activity
            android:name=".student.ui.EditProfileBottomSheetActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".teacher.ui.activity.AttendanceListActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.HistorySubjectActivity"
            android:exported="false" />
        <activity
            android:name=".student.ui.StudentDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".common.ui.auth.StudentLoginActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.SessionActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.ClassScheduleDialog"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".teacher.ui.activity.AttendanceReportActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.ManageSessionActivity"
            android:exported="false" />
        <activity
            android:name=".teacher.ui.activity.MainNavigationActivity"
            android:exported="false" />
        <activity
            android:name=".common.ui.auth.TeacherLoginActivity"
            android:exported="true" />
        <activity
            android:name=".common.splash.SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>