<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:visibility="visible"
    tools:context=".teacher.ui.activity.ClassScheduleDialog">

    <!-- Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:elevation="8dp">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule New Class"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:paddingEnd="40dp"/>

            <!-- Close Button (X) -->
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:contentDescription="Close"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="#333333"/>
        </RelativeLayout>

        <!-- Subject Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter subject"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:autofillHints="subject"
            android:layout_marginBottom="16dp"
            android:inputType="textCapWords" />

        <!-- Room Dropdown (keep spinner) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Time Selection (unchanged) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/startTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_start_time"
                    android:focusable="true"
                    android:clickable="true"
                    android:inputType="time"
                    android:autofillHints="time"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- End Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/endTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_end_time"
                    android:inputType="time"
                    android:focusable="true"
                    android:autofillHints="date"
                    android:clickable="true"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/schedule_class"
                android:textAllCaps="false"
                android:background="@drawable/teacher_rounded_button"
                android:textColor="#FFFFFF"
                android:paddingVertical="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
