<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="@color/blue"
        android:endColor="#2e7dff"
        android:centerColor="#4f3af6"
        android:angle="135" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>
